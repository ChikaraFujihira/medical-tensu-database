{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "z-modifiers (修飾語マスター)",
  "type": "object",
  "properties": {
    "modifier_code": {
      "type": "string",
      "description": "修飾語コード（4桁）。中央マスター z.txt の主キー。"
    },
    "name": {
      "type": "string",
      "description": "修飾語名称（正式名称）。"
    },
    "kana": {
      "type": "string",
      "description": "修飾語名称カナ表記。"
    },
    "category": {
      "type": "string",
      "description": "修飾語分類（部位／程度／状態／期間など）"
    },
    "valid_from": {
      "type": "string",
      "format": "date",
      "description": "適用開始日。"
    },
    "valid_to": {
      "type": "string",
      "format": "date",
      "description": "適用終了日（空欄=現行）。"
    },
    "change_type": {
      "type": "string",
      "description": "変更区分（新規・変更・廃止）。"
    },
    "raw_record": {
      "type": "string",
      "description": "元TSV行を UTF-8 で保持（保険・将来互換）。"
    }
  },
  "required": [
    "modifier_code",
    "name",
    "valid_from",
    "raw_record"
  ]
}
